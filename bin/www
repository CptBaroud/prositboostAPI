#!/usr/bin/env node
/**
 * Module dependencies.
 */
const app = require('../app');
const debug = require('debug')('prositboostapi:server');
const http = require('http');
const https = require('https');
const fs = require('fs');

let key
let cert

/**
 * On load les fichiers de permissions
 */
try {
  key = fs.readFileSync(process.env.KEY);
  cert = fs.readFileSync(process.env.CERT);
} catch (e) {
  console.error(e)
}

/**
 * Get port from environment and store in Express.
 */
const port = normalizePort(process.env.PORT || process.env.HTTPPORT);
app.set('port', port);

/**
 * Create HTTP server.
 */
const httpServer = http.createServer(app);
const httpIo = require('socket.io')(httpServer, {
  cors: {
    origin: [process.env.API_LINK, process.env.SITE_LINK],
    methods: ["GET", "POST", "PUT", "DELETE"]
  }
})

httpIo.on('connection', (socket) => {
  console.log('Http io socket connected : ' + socket.id)
  httpIo.emit('connection', 'Socket succesfully connected')
  socket.on('event', (data) => {
    console.log(data)
    httpIo.emit(data)
  })

  socket.on('prosit', (data) => {
    console.log(data)
    httpIo.emit('prosit', data)
  })

  socket.on('kivaferkoi', (data) => {
    console.log(data)
    httpIo.emit('kivaferkoi', data)
  })
})

app.httpIo = httpIo;

/**
 * Create HTTPS server
 * @type {Server}
 */
const httpsServer = https.createServer({key: key, cert: cert}, app);
const httpsIo = require('socket.io')(httpsServer, {
  cors: {
    origin: [process.env.API_LINK, process.env.SITE_LINK],
    methods: ["GET", "POST", "PUT", "DELETE"]
  }
})

httpsIo.on('connection', (socket) => {
  console.log('Https connected trought : ' + socket.id)
  httpsIo.emit('news', 'Nouvelle connection https au socket ' + socket.id)
  socket.on('event', (data) => {
    console.log(data)
    httpIo.emit(data)
  })

  socket.on('prosit', (data) => {
    console.log(data)
    httpIo.emit('prosit', data)
  })

  socket.on('kivaferkoi', (data) => {
    console.log(data)
    httpIo.emit('kivaferkoi', data)
  })
})

app.httpsIo = httpsIo;


/**
 * Listen on provided port, on all network interfaces.
 */

httpServer.listen(process.env.HTTPPORT);
httpServer.on('error', onError);
httpServer.on('listening', onListening);

httpsServer.listen(process.env.HTTPSPORT);
httpsServer.on('error', onError);
httpsServer.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof port === 'string'
      ? 'Pipe ' + port
      : 'Port ' + port;
  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  const addr = httpServer.address();
  const bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
